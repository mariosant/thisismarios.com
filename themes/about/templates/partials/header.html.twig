{% set bg = page.media[page.header.primary_image].cropZoom(1366,450).brightness(-50).url | defined(url('theme://img/home-bg.jpg')) %}

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url('{{bg}}')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="site-heading">
                    <h1>{{page.title}}</h1>
                    <hr class="small">
                    <span class="subheading">{{page.header.subtitle | markdown}}</span>
                </div>
            </div>
        </div>
    </div>
</header>